{
	"name": "prographql",
	"version": "1.0.0",
	"description": "A GraphQL server using Apollo and Prisma",
	"main": "index.ts",
	"type": "module",
	"scripts": {
		"start": "bun run src/index.ts",
		"dev": "nodemon --watch src --exec bun run src/index.ts",
		"build": "tsc",
		"serve": "node dist/index.js"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"nodemon": "^3.1.7",
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@apollo/server": "^4.11.0",
		"@prisma/client": "5.19.1",
		"@types/express": "^4.17.21",
		"body-parser": "^1.20.3",
		"cors": "^2.8.5",
		"express": "^4.21.0",
		"graphql": "^16.9.0",
		"prisma": "^5.19.1"
	}
}
